# declare variables

CXX      := g++
CXXFLAGS := -Wall -std=c++11 -O3
INCLUDE  := -Iinclude/
BUILD    := ./build
TARGET   := program

SRC      :=                      \
	$(wildcard src/readfile.cpp)	\
	$(wildcard src/MurmurHash3.cpp)   \
	$(wildcard src/cbloomfilter.cpp)   \
	$(wildcard src/crambo.cpp)   \
	$(wildcard src/bitArray.cpp)	\
	$(wildcard src/PreFilterIndex.cpp)	\
	$(wildcard src/utils.cpp)	\
	#  $(wildcard src/PostFilterIndex.cpp)	\
	#  $(wildcard src/FilterIndex.cpp)	\


OBJECTS := $(SRC:%.cpp=$(BUILD)/%.o)

all: clean build $(BUILD)/$(TARGET)

$(BUILD)/$(TARGET): $(OBJECTS)
	@mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) $(INCLUDE) $(OBJECTS) -o $(BUILD)/$(TARGET)

$(BUILD)/%.o: %.cpp
	@mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) $(INCLUDE) -o $@ -c $<

.PHONY: all build clean debug release

build:
	@mkdir -p $(BUILD)

debug: CXXFLAGS += -DDEBUG -g
debug: all

release: CXXFLAGS += -O2
release: all

clean:
	-@rm -rvf $(BUILD)/*